<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = User.avatar_url(@user, 128) %>
       <% unless avatar_url.nil? %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
           <%= pluralize(@user.favorites.count, 'favorite') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <h2>Posts</h2>
   <% if profile_posts?(@post) %>
     <%= render @user.posts %>
   <% else %>
     <p> No posts have been submitted by this user </p>
   <% end %>

 <h2>Comments</h2>
   <% if profile_comments?(@comment) %>
     <%= render @user.comments %>
   <% else %>
     <p> No comments have been submitted by this user </p>
   <% end %>

 <h2>Favorite Posts</h2>
    <%= current_user.favorite_for(@post) %>
